{
  "name": "larahub/larahub",
  "description": "LaraHub - Lightweight PHP framework for small projects",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.6",
    "illuminate/database": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "core/"
    }
  },
  "bin": [
    "larahub"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-create-project-cmd": [
      "@php core/Setup.php"
    ],
    "post-install-cmd": [
      "@php core/Setup.php"
    ]
  }
}